
# Optimization for faster installs
prefer-offline=true
cache-max=86400000
audit=false
fund=false
save-exact=true

# Timeout settings
timeout=300000
fetch-timeout=300000
fetch-retry-mintimeout=20000
fetch-retry-maxtimeout=120000
fetch-retry-factor=2
fetch-retries=3

# Network optimization
registry=https://registry.npmjs.org/
maxsockets=20
network-concurrency=3

# Disable unnecessary features
optional=false
shrinkwrap=false
package-lock=false
