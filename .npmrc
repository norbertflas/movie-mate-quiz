
# Optimization for faster installs
prefer-offline=true
cache-max=86400000
audit=false
fund=false
save-exact=true

# Timeout settings - increased for slower connections
timeout=600000
fetch-timeout=600000
fetch-retry-mintimeout=30000
fetch-retry-maxtimeout=180000
fetch-retry-factor=2
fetch-retries=5

# Network optimization
registry=https://registry.npmjs.org/
maxsockets=10
network-concurrency=1

# Fix for Rollup optional dependencies issue
optional=true
legacy-peer-deps=false

# Supabase specific optimizations
ignore-scripts=false

# Disable problematic npm features that cause deployment issues
shrinkwrap=false
package-lock=false
